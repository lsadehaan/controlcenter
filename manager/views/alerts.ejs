<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('partials/head') %>
</head>
<body>
  <%- include('partials/nav') %>
  
  <main class="main-content">
    <div class="container">
      <div class="page-header">
        <h2>Alerts</h2>
        <div class="filter-controls">
          <select id="level-filter">
            <option value="">All Levels</option>
            <option value="info">Info</option>
            <option value="warning">Warning</option>
            <option value="error">Error</option>
            <option value="critical">Critical</option>
          </select>
          <select id="status-filter">
            <option value="">All Status</option>
            <option value="unacknowledged">Unacknowledged</option>
            <option value="acknowledged">Acknowledged</option>
          </select>
        </div>
      </div>
      
      <div class="alerts-list">
        <% if (alerts.length === 0) { %>
          <div class="no-data">
            <p>No alerts yet</p>
            <p>Alerts from agents will appear here</p>
          </div>
        <% } else { %>
          <% alerts.forEach(alert => { %>
            <div class="alert-item <%= alert.level %> <%= alert.acknowledged ? 'acknowledged' : '' %>" data-level="<%= alert.level %>" data-acknowledged="<%= alert.acknowledged %>">
              <div class="alert-header">
                <span class="alert-level-badge <%= alert.level %>"><%= alert.level.toUpperCase() %></span>
                <span class="alert-time"><%= new Date(alert.created_at).toLocaleString() %></span>
                <% if (!alert.acknowledged) { %>
                  <button class="btn btn-sm acknowledge-btn" data-alert-id="<%= alert.id %>">Acknowledge</button>
                <% } else { %>
                  <span class="acknowledged-badge">Acknowledged</span>
                <% } %>
              </div>
              <div class="alert-content">
                <p class="alert-message"><%= alert.message %></p>
                <% if (alert.agent_id) { %>
                  <p class="alert-source">Agent: <%= alert.agent_id %></p>
                <% } %>
                <% if (alert.details && Object.keys(alert.details).length > 0) { %>
                  <details>
                    <summary>Details</summary>
                    <pre><%= JSON.stringify(alert.details, null, 2) %></pre>
                  </details>
                <% } %>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </div>
  </main>
  
  <%- include('partials/footer') %>

  <script src="/js/alerts.js"></script>
</body>
</html>